<div class="form">
<h2 class="title">新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
   <%= f.label :プロフィール画像 %>
　　<%= f.attachment_field :profile_image %>  
</div>


 <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder:"名前", autocomplete: "name"%>
 </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", autocomplete: "email"%>
  </div>



  <div class="field">
    <%= f.password_field :password, placeholder:"パスワード", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"確認用パスワード", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class:'submit'%>
  </div>
<% end %>

</div>
