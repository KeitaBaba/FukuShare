<div class="columns is-centered">
  <div class="column is-4 has-text-centered">
   
      <%=attachment_image_tag @user,:profile_image, class:"thumbnail150"%>
      <p><%=@user.name%></p>
      <% if @user.id == current_user.id %>
      <p><%=@user.email%></p>
      <%= link_to '編集', edit_user_path(@user),class: "link_edit"%>
      <%end%>
  </div>
</div>

<h2 class="is-size-3">シェアした服</h2>
  <div class="columns is-multiline is-centered">
   <% @fukus.each do |fuku| %>
    <div class="column is-4 has-text-centered">
      <div class="card">
       <div class="card-content">
          <%= link_to(fuku_path(fuku)) do %>
          <%=attachment_image_tag fuku,:image,class:"thumbnail150" %>
          <% end %>
       </div>
      </div>
    </div>
   <% end %>
  </div>


  <h2 class="is-size-3">いいねした服</h2>
  <div class="columns is-multiline is-centered">
   <%@likes.each do |like|%>
    <div class="column is-4 has-text-centered">
      <div class="card">
       <div class="card-content">
         <% fuku=Fuku.find_by(id:like.fuku_id)%>
         <%= link_to(fuku_path(fuku)) do %>
          <%=attachment_image_tag fuku,:image,class:"thumbnail150" %>
          <% end %>
       </div>
      </div>
    </div>
   <% end %>
  </div>




 


 